{
  "manifest_version": 3,
  "name": "Fresh Tabs",
  "version": "1.0",
  "description": "Archives tabs every morning and gives users a fresh start, with easy access to saved tabs via popup",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background_complete.js"
  },
  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fresh Tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  
  "options_page": "options.html"
}